{
  "name": "@giulio-leone/one-agenda",
  "version": "0.8.0",
  "description": "OneAgenda - Proactive planning engine",
  "sideEffects": false,
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint --fix \"src/**/*.{ts,tsx}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "ai": "6.0.77",
    "commander": "^14.0.2",
    "date-fns": "^4.1.0",
    "lodash-es": "^4.17.22",
    "lucide-react": "^0.562.0",
    "node-ical": "^0.22.1",
    "uuid": "^13.0.0",
    "zod": "4.3.6"
  },
  "peerDependencies": {
    "@giulio-leone/lib-core": "workspace:*",
    "@giulio-leone/lib-shared": "workspace:*",
    "@giulio-leone/types": "workspace:*",
    "@giulio-leone/ui": "workspace:*",
    "@prisma/client": "^7.2.0",
    "react": ">=19.0.0"
  },
  "peerDependenciesMeta": {
    "@giulio-leone/lib-core": {
      "optional": true
    },
    "@giulio-leone/lib-shared": {
      "optional": true
    },
    "@giulio-leone/types": {
      "optional": true
    },
    "@giulio-leone/ui": {
      "optional": true
    },
    "@prisma/client": {
      "optional": true
    },
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@types/uuid": "^11.0.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "bin": {
    "oneagenda": "bin/oneagenda.mjs"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "restricted"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/g97iulio1609/one-agenda.git"
  },
  "license": "UNLICENSED"
}
