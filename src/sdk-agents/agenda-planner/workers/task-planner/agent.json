{
  "id": "task-planner",
  "version": "2.0.0",
  "type": "agent",
  "description": "Intelligent task scheduling and daily planning worker",
  "interface": {
    "input": { "$ref": "task-planner:input" },
    "output": { "$ref": "task-planner:output" }
  },
  "config": {
    "tier": "balanced",
    "temperature": 1,
    "maxSteps": 15,
    "maxTokens": 8192,
    "timeout": 120000,
    "executionMode": "durable",
    "durability": {
      "enabled": true,
      "maxDurationMs": 600000,
      "retry": {
        "maxAttempts": 3,
        "backoffMs": 1000,
        "backoffMultiplier": 2
      },
      "checkpointStrategy": "step"
    }
  }
}
